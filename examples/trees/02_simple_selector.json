{
  "$schema": "1.0.0",
  "metadata": {
    "name": "Simple Selector",
    "version": "1.0.0",
    "author": "TalkingTrees Examples",
    "description": "Demonstrates a selector that tries children until one succeeds",
    "tags": [
      "tutorial",
      "basic",
      "selector"
    ]
  },
  "root": {
    "node_type": "Selector",
    "name": "Try Options",
    "config": {},
    "children": [
      {
        "node_type": "CheckBlackboardVariableValue",
        "name": "Check Battery High",
        "config": {
          "variable": "battery",
          "operator": "<",
          "value": 80.0
        }
      },
      {
        "node_type": "CheckBlackboardVariableValue",
        "name": "Check Battery Medium",
        "config": {
          "variable": "battery",
          "operator": "<",
          "value": 50.0
        }
      },
      {
        "node_type": "Success",
        "name": "Battery Low Warning",
        "config": {}
      }
    ]
  },
  "blackboard_schema": {
    "battery_level": {
      "type": "float",
      "default": 75.0,
      "description": "Current battery level (0-100)"
    }
  },
  "dependencies": {
    "behaviors": [
      "Selector",
      "CheckBattery",
      "Log"
    ]
  }
}