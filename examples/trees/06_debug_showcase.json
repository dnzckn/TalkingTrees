{
  "$schema": "1.0.0",
  "metadata": {
    "name": "Debug Showcase",
    "version": "1.0.0",
    "author": "TalkingTrees Examples",
    "description": "Demonstrates debugging features: breakpoints, watches, and step execution",
    "tags": [
      "tutorial",
      "debug",
      "breakpoint",
      "watch"
    ]
  },
  "root": {
    "node_type": "Sequence",
    "name": "Debug Demo",
    "config": {},
    "ui_metadata": {
      "notes": "Set breakpoints on any node to pause execution. Watch 'counter' variable."
    },
    "children": [
      {
        "node_type": "Success",
        "name": "Initialize",
        "config": {}
      },
      {
        "node_type": "Sequence",
        "name": "Loop Simulation",
        "config": {},
        "children": [
          {
            "node_type": "Success",
            "name": "Iteration 1",
            "config": {}
          },
          {
            "node_type": "TickCounter",
            "name": "Pause 1",
            "config": {
              "duration": 5,
              "completion_status": "SUCCESS"
            }
          },
          {
            "node_type": "Success",
            "name": "Iteration 2",
            "config": {}
          },
          {
            "node_type": "TickCounter",
            "name": "Pause 2",
            "config": {
              "duration": 5,
              "completion_status": "SUCCESS"
            }
          },
          {
            "node_type": "Success",
            "name": "Iteration 3",
            "config": {}
          }
        ]
      },
      {
        "node_type": "Selector",
        "name": "Decision Point",
        "config": {},
        "ui_metadata": {
          "notes": "Step through this selector to see decision logic"
        },
        "children": [
          {
            "node_type": "CheckBlackboardVariableValue",
            "name": "Check High Battery",
            "config": {
              "variable": "battery",
              "operator": "<",
              "value": 80.0
            }
          },
          {
            "node_type": "Success",
            "name": "Battery Not High",
            "config": {}
          }
        ]
      },
      {
        "node_type": "Success",
        "name": "Complete",
        "config": {}
      }
    ]
  },
  "blackboard_schema": {
    "counter": {
      "type": "int",
      "default": 0,
      "description": "Loop counter - watch this variable!"
    },
    "battery_level": {
      "type": "float",
      "default": 75.0,
      "description": "Simulated battery level"
    }
  }
}